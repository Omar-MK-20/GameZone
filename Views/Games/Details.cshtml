@model Game
@{
    ViewData["Title"] = Model.Name;
}

<div class="card border-secondary rounded-4 mt-5 overflow-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-3 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="text-secondary fw-bolder">@Model.Name</h1>
                    <span class="badge bg-info mb-3">@Model.Category?.Name</span>
                    <p class="">@Model.Description</p>
                </div>
                <div class="">
                    <div class="mb-4">
                        @foreach (var gameDevice in Model.Devices)
                        {
                            <i class="@gameDevice.Device.Icon fs-4 text-info"></i>
                        }
                    </div>
                    <div class="d-flex justify-content-evenly">
                        <a class="btn btn-outline-info rounded rounded-3 me-2 w-50" asp-action="Edit" asp-route-id="@Model.Id">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a href="javascript:;" class="btn btn-outline-danger rounded rounded-3 me-3 js-delete nGame w-50" data-id="@Model.Id" data-name="@Model.Name">
                            <i class="bi bi-trash2"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <img id="image10" src="@($"{FileSettings.ImagesPath}/{Model.Cover}")" alt="@Model.Name" class="w-100" />
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/games-index.js"></script>
}